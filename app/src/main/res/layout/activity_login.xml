<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@color/main_orange"
    android:scrollbars="none"
    tools:context="com.example.masssportsnews.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:scaleX="2"
            android:scaleY="2"
            android:visibility="visible"
            android:src="@drawable/masssportslogo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Welcome"
            android:textAlignment="center"
            android:textColor="#1945C8"
            android:textSize="50sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvUsername"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:hint="Username"
            android:minHeight="48dp"
            android:textColorHint="#AD515050"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/tvPasswordSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#AD515050" />

        <Button
            android:id="@+id/btnSignupActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#1556FD"
            android:fontFamily="serif-monospace"
            android:text="Sign Up"
            android:textSize="24sp"
            android:typeface="normal"
            android:visibility="visible"
            app:cornerRadius="100dp"
            app:strokeColor="@color/light_blue"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:fontFamily="serif-monospace"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="Sign In"
            android:textSize="24sp"
            android:typeface="normal"
            app:cornerRadius="100dp"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />


    </LinearLayout>
</ScrollView>